<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_author"
    android:orientation="vertical" >

    <include layout="@layout/titile_bar_layout" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/feedback_edit_bg"
        android:gravity="center_horizontal" >

        <EditText
            android:id="@+id/feedback_edit_content"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/feedback_content_hint"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textSize="16sp" />

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/feedback_edit_content"
            android:background="@color/gray" />

        <EditText
            android:id="@+id/feedback_edit_qq"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/line1"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/feedback_qq"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>