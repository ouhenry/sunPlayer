<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
	<include layout="@layout/myinfo_title"
	    android:id="@+id/my_info_title"/>
	
	<RelativeLayout android:id="@+id/user_photo_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/my_info_title" >
	    <com.exmart.qiyishow.ui.view.RoundImageView
                    android:id="@+id/user_title_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:padding="7dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/icon_avatar_large"/>
	    <TextView android:id="@+id/tv_user_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/user_name"
	        android:layout_marginTop="20dp"
	        android:layout_below="@+id/user_title_image"
	        android:layout_centerHorizontal="true"/>
	</RelativeLayout>
</RelativeLayout>
